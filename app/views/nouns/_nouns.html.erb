<h1>Nouns</h1>
<%= form_tag request.path, class: "form-search", method: 'get' do %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-search"></i></span>
    <%= search_field_tag :search, params[:search], value: @search || "", placeholder: "Search", class: "search-query" %>
  </div>
<% end %>

<% if @nouns.any? %>
  <%= will_paginate @nouns %>

  

  <ul id="nouns_list" class="simple_list">
    <%= render partial: 'noun', collection: @nouns %>
  </ul>
  <%= will_paginate @nouns %>
<% end %>